<h1 class="text-center pt-4">Create new category</h1>

<div class="container"> 
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="form-group row pt-3">
          <%= f.label :name, "Category name", class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>  

        <div class="d-flex justify-content-center pt-3">
          <%= f.submit class: "btn btn-outline-light btn-lg"  %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-center pt-3 text-info" %>
  </div>
</div>