<div class="container"> 
  

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="form-group row pt-3">
          <%= f.label :title, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row pt-3">
          <%= f.label :description, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group row pt-3">
          <%= f.label :category, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, 
              { prompt: "Make your selection from the list below (can be empty)" }, { multiple: true, class: "custom-select form-control shadow rounded" }) %>
          </div>
        </div>

        <div class="d-flex justify-content-center pt-3">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-center pt-3 text-info" %>
  </div>
</div>